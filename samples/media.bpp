start { 
    # Calcular a media entre dois valres

    function calcula(){
        int x = read("Digite um valor para x: ");
        int y;
        y = read("Digite um valor para y: ");
        int media;
        media = (x + y) / 2;

        if (media >= 6){
            write("A média é maior ou igual a 6" + "\n");
        } else {
            write("A média é menor que 6" + "\n");
        }

        write("A média é: " + media + "\n");
    }

    calcula();

} end
