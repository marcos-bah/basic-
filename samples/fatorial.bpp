start { 
    # Calcular o fatorial de n

    function fatorial(){
        int n = read("Digite um valor para n: ");
        int result = 1;

        while (n > 1) {
            result = result * n;
            n = n - 1;
        }

        return result;
    }

    int fat = fatorial();

    write("O fatorial de n Ã©: " + fat + "\n");
} end